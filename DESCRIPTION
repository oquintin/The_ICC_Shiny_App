Package: ICCShinyApp
Type: Shiny
Title: ICC Shiny App for Estimating, Selecting, Reporting, and Applying Intra-Cluster Correlation Coefficients in Cluster-Randomised Trials
Version: 1.0.0
Authors@R: 
    c(
      person("Olivier", "Quintin", role = c("aut", "cre"),
             email = "olivierquintinpro@qmul.ac.uk"),
      person("Samuel K.", "Sarkodie", role = "aut"),
